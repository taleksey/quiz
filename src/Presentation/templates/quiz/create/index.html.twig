{% extends 'base.html.twig' %}
{% block title %} Create Quiz{% endblock %}
{% block header %}
    {{ include('base/header.html.twig', {isCreatePage: true}) }}
{% endblock %}
{% block body %}
    <main class="flex-shrink-0 main mt-5">
        <div class="container">
            <div class="col-md-10 col-lg-10">
                <div class="border">
                    <div class="question bg-white p-3 border-bottom">
                        <div class="d-flex flex-row justify-content-between align-items-center mcq">
                            <p>You are creating new Quiz. You must set name quiz and some questions. <b>But all questions must have
                                answers, and we have to set one correct answer. </b></p>
                        </div>
                    </div>
                    <div id="new-quiz"></div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        window.token = "{{ token }}";
        window.csrfToken = "{{ csrf_token('item') }}";
    </script>
    {{ encore_entry_script_tags('new_quiz') }}
{% endblock %}
