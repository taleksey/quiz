{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block header %}
    {{ include('base/header.html.twig') }}
{% endblock %}
{% block body %}
    <main class="flex-shrink-0 main mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-md-auto">
                    <div class="card bg-light mb-3 mt-5" style="width: 800px">
                        <div class="card-body">
                            <div class="card-header mb-3">Registration Form</div>
                            {{ form_start(form) }}
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.nickName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
