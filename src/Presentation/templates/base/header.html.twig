{% block header %}
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-black">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link {% if isMainPage is defined %} active {% endif %}" href="{{ path('homepage') }}">Main page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link{% if isCreatePage is defined %} active {% endif %}" href="{{ path('quiz_new') }}">Add new Quiz</a>
                        </li>
                        <li>
                            <a class="nav-link{% if isAuthorizePage is defined %} active {% endif %}" href="{{ path('authorize') }}">Authorization</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav log-actions">
                        <li>
                            {% if app.user %}
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout({{ app.user.getNickName }})</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            {% endif %}

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}
